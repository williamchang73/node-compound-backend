<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.companies() %>">companies</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of company</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New company', pathTo.new_company(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (companies.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% companies.forEach(function (company) { %>
                <tr>
                    <td><strong><%- link_to('company #' + company.id, pathTo.company(company)) %></strong></td>
                    <td><strong><%- link_to(company.name, pathTo.company(company)) %></strong></td>
                    <td><strong><%- link_to(company.status, pathTo.company(company)) %></strong></td>
                    <td>
                        <%- link_to('<i class="icon-edit"></i> Edit', pathTo.edit_company(company), {class: 'btn btn-mini'}) %>
                        <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.company(company), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No companies were found.</strong>
        </p>
        <% } %>
    </div>
</div>
