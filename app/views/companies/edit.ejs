<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.companies() %>">companies</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Edit company</a></li>
</ul>

<div class="page-header">
    <h1>Edit company</h1>
    <h2>!!! Copy Data for backup first, in case losing user's data !!!</h2>
</div>

<% var form = formFor(company, {action: pathTo.company(company), method: 'PUT', id: "company-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
    <%- form.submit('<i class="icon-ok icon-white"></i> Update company', {class: 'btn btn-primary'}) %> or
    <%- linkTo('Cancel', pathTo.company(company), {class: 'btn'}) %>
</div>
<%- form.end() %>
